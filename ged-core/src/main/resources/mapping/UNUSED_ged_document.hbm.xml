<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
						"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.ged.models.GedDocument" table="document" lazy="false" >

		<id name="id" column="rowid">
			<generator class="native"></generator>
		</id>

		<property name="name" column="name"></property>
		<property name="date" column="date"></property>
		<property name="description" column="description"></property>

		<list name="documentFiles" inverse="false" cascade="all-delete-orphan" lazy="false">
			<key column="document_id" not-null="false"/>
			<list-index column="file_order"/>
			<one-to-many class="com.ged.models.GedDocumentFile"/>
		</list>

		<many-to-one name="location" column="location" /> 

	</class>

</hibernate-mapping>

