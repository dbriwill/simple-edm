<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
						"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.ged.plugins.PluginManagementInformations" table="plugin" lazy="false" >

		<id name="id" column="rowid">
			<generator class="native"></generator>
		</id>
		
		<property name="fileName" column="file_name"></property>
		<property name="lastUpdateDate" column="last_update_date"></property>
		<property name="dayOfMonthForUpdate" column="day_of_month_for_update"></property>
		<property name="destinationDirectory" column="destination_directory"></property>
		<property name="destinationFilePattern" column="destination_file_pattern"></property>
		<property name="intervalBetweenUpdates" column="interval_between_update"></property>
		
		<list name="pluginProperties" inverse="false" cascade="all-delete-orphan" lazy="false">
			<key column="plugin_id" not-null="false"/>
			<list-index column="property_index"/>
			<one-to-many class="com.ged.connector.plugins.SimpleGedPluginProperty"/>
		</list>

	</class>

</hibernate-mapping>

